<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>



<GridPane prefHeight="600" prefWidth="600"
          xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Project2.NewOrderController"
          hgap="10" vgap="10"
          style="-fx-padding: 15;">

    <!-- 3 columns: 2 for buttons, 1 for order list -->
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="30"/>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="30"/>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="40"/>
    </columnConstraints>

    <!-- Row constraints: 3 equal-height rows -->
    <rowConstraints>
        <RowConstraints vgrow="NEVER" percentHeight="10"/>
        <RowConstraints vgrow="ALWAYS" percentHeight="30"/>
        <RowConstraints vgrow="ALWAYS" percentHeight="30"/>
        <RowConstraints vgrow="ALWAYS" percentHeight="30"/>
        <RowConstraints vgrow="NEVER" percentHeight="5"/>
    </rowConstraints>

    <children>
        <!-- Headers -->
        <Label text="MENU"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               GridPane.rowIndex="0" GridPane.columnIndex="0"
               GridPane.columnSpan="2"/>

        <Label text="ORDER"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               GridPane.rowIndex="0" GridPane.columnIndex="2"/>

        <!-- Buttons -->
        <!-- Row 1 -->
        <Button fx:id="itemA" text="Hamburger"
                maxWidth="Infinity" maxHeight="Infinity"
                GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Button fx:id="itemB" text="French Fries"
                maxWidth="Infinity" maxHeight="Infinity"
                GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Row 2 -->
        <Button fx:id="itemC" text="Caesar Salad"
                maxWidth="Infinity" maxHeight="Infinity"
                GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Button fx:id="itemD" text="Fountain Drink"
                maxWidth="Infinity" maxHeight="Infinity"
                GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Row 3 -->
        <Button fx:id="itemE" text="Ice Cream Sundae"
                maxWidth="Infinity" maxHeight="Infinity"
                GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Button fx:id="itemF" text="Chicken Sandwich"
                maxWidth="Infinity" maxHeight="Infinity"
                GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Order table with real columns -->
        <TableView fx:id="orderTable"
                   maxWidth="Infinity" maxHeight="Infinity"
                   GridPane.rowIndex="1" GridPane.columnIndex="2"
                   GridPane.rowSpan="2">
            <columns>
                <TableColumn fx:id="colName" text="Item" prefWidth="160"/>
                <TableColumn fx:id="colQty" text="Qty" prefWidth="60"/>
                <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
            </columns>
        </TableView>

        <!-- footer with total on bottom -->
        <HBox spacing="8"
              GridPane.rowIndex="3" GridPane.columnIndex="2"
              style="-fx-alignment: center-right;">
            <Label text="Total:"/>
            <Label fx:id="totalLabel" text="0.00"/>
        </HBox>

        <!-- Submit button -->
        <Button text="Submit Order"
                onAction="#onSubmit"
                maxWidth="Infinity"
                GridPane.rowIndex="4" GridPane.columnIndex="0"
                GridPane.columnSpan="3"/>
    </children>
</GridPane>
